BCRD2COL	PROC
	;IN
	;BL - -  
	;DS:SI
	;ES:DI
	;BP -  -

	PUSH	AX
	PUSH	CX
	PUSH	DX
	PUSH	DI
	XOR	DX,DX
	MOV	CX,108H
	XCHG	DH,CH
BCRD2COL2:
	CALL	CRD2COLBT
	XOR	DH,1
	JZ	BCRD2COL1
	INC	DI
BCRD2COL1:
	LOOP	BCRD2COL2
	POP	DI
	POP	DX
	POP	CX
	POP	AX
	RET
ENDP
CRD2COLBT	PROC
	;IN
	;CL - FLAG:2-0    (1-8)
	;DH - =0   
	;DS:SI -   
	;ES:DI -   
	;BP -  ( - 0,1,2,3
	;OUT
	;DL  -  (3-0 )
	PUSH	AX
	PUSH	BX
	PUSH	CX
	PUSH	DX
	XOR	DL,DL
	MOV	AL,2
	XCHG	CL,AL
	MOV	BX,BP
	SHL	BX,CL
	SHL	DH,CL
	XCHG	CL,AL
CRD2COLBT1:
	TEST	DH,4
	JZ	CRD2COLBT2
	MOV	BYTE PTR ES:[DI],0
CRD2COLBT2:
	SUB	BX,BP
	MOV	AL,DS:[SI+BX]
	SHR	AL,CL
	RCL	DL,1
	OR	BX,BX
	JNZ	CRD2COLBT1
	MOV	CL,DH
	SHL	DL,CL
	OR	ES:[DI],DL
	POP	DX
	POP	CX
	POP	BX
	POP	AX
	RET
ENDP